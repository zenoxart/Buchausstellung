<Window x:Class="WIFI.Ausstellung.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WIFI.Ausstellung"
        xmlns:p="clr-namespace:WIFI.Ausstellung.Properties"
        mc:Ignorable="d"
        xmlns:views="clr-namespace:WIFI.Ausstellung.Views"
        
        Name="HauptfensterView"
        Title="BAVS (Buchausstellungs Verwaltungs Software)" 
        Icon="Assets/Bilder/Logo.ico"
        Height="450" 
        
        MinHeight="450"
        MinWidth="700"
        Width="800"
        Style="{DynamicResource Windowbackground}">
  
    <Grid Margin="0" >
        <views:Anwendungsstartanzeige 
            Visibility="{Binding ZeigeStart, Converter={StaticResource myBoolToVisibilityConverter}}"
            />
        <views:Arbeitsbereich Visibility="{Binding ZeigeArbeitsbereich, Converter={StaticResource myBoolToVisibilityConverter}}"/>
    </Grid>
    

</Window>
